<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgraan"
    tools:context=".Login">


    <ImageView
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/primary_logo"
       android:layout_marginTop="@dimen/sp_20"
        android:layout_marginLeft="@dimen/sp_20"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:outlineSpotShadowColor="@color/dark_gray"
        app:cardCornerRadius="@dimen/dp_12"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/gallery_r"
            android:padding="@dimen/dp_15"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_25"
                android:text="Login"/>


            <TextView
                android:id="@+id/loginno"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:text="with Your Mobile No and Password"/>




        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Mobile NO"
                android:textColor="@color/smoke_gray"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_mobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="30dp"
                android:background="@color/transparent"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:hint="Enter Mobile No"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/txt_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15.8dp"
                android:layout_marginRight="30dp"
                android:background="@color/smoke_gray" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/sp_20"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Password"
                android:textColor="@color/smoke_gray"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="30dp"
                android:background="@color/transparent"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:hint="Enter Password"
                android:textColor="@color/txt_black"
                android:textColorHint="@color/txt_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15.8dp"
                android:layout_marginRight="30dp"
                android:background="@color/smoke_gray" />


        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30.2dp"
            app:backgroundTint="@null"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_green"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rr"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/driversupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Driver Support No : "/>

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/driversupport"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:text="7303037203"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_15"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/dont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:textSize="16sp"
            android:text="Don't have a Account ?"/>


        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dont"
            android:layout_marginLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:text="Register Here"/>




    </RelativeLayout>


</RelativeLayout>